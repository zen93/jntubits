<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.momofactory.jntubits.QuestionActivity">

    <TextView android:text="With suitable arithmetic laws and weights, path expressions are converted into algebraic functions that are called?"
        android:id="@+id/answerQTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text=""
        android:id="@+id/answerChosenTextView"
        android:layout_below="@+id/answerQTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text=""
        android:id="@+id/answerCorrectTextView"
        android:layout_below="@+id/answerChosenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back.."
        android:id="@+id/backButton"
        android:layout_below="@+id/answerCorrectTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
