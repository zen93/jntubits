<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.momofactory.jntubits" >

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:name=".SelectOptions"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.MainActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.MainActivity" />
        </activity>
        <activity
            android:name=".ScoreActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.MainActivity" />
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".QuestionsListActivity"
            android:label="@string/title_activity_question_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.MainActivity" />
        </activity>
        <activity
            android:name=".MCQ"
            android:label="@string/title_activity_mcq" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.QuestionsListActivity" />
        </activity>
        <activity
            android:name=".FB"
            android:label="@string/title_activity_fb" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.momofactory.jntubits.QuestionsListActivity" />
        </activity>

    </application>

</manifest>
